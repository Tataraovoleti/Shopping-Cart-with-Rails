<% if session[:login] %>
<h1>Editing item</h1>

<%= error_messages_for :item %>
<% form_for(@item) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description, :size=> "29x8" %>
  </p>
  
  <p>
    <b>Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Image url</b><br />
    <%= f.text_field :image_url %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>
<% else %>
<p>
 <b>
  <i>First You Need To Login</i></b></p><br>
  <%= link_to 'Login', :controller=>'user', :action=>'login' %>
<% end %>